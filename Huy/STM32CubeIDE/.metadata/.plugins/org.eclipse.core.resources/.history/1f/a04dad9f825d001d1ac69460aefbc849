#include "fsm_manual.h"

void fsm_simple_buttons_run (){
	// TODO
	if(isButton0Pressed() == 1){
			SevenSEGCounter = 0;
		}
		if(isButton1Pressed() == 1){
			SevenSEGCounter++;
			if(SevenSEGCounter >= 10) SevenSEGCounter = 0;
		}
		if(isButton1Pressed() == 1){
			SevenSEGCounter--;
			if(SevenSEGCounter <= 0) SevenSEGCounter = 9;
		}
}
