#ifndef SRC_DISPLAY7SEG_H_
#define SRC_DISPLAY7SEG_H_



#endif /* SRC_DISPLAY7SEG_H_ */

display7SEG(int num){
	switch(num){
		case 0: {
					int LedArray[7] = { 0, 0, 0, 0, 0, 0, 0, 0, 1};
					LedStatus(LedArray);
				}
		break;

		case 1: {
					int LedArray[7] = { 1, 0, 0, 1, 1, 1, 1, 1, 1};
					LedStatus(LedArray);
				}
				break;
		case 2: {
					int LedArray[7] = { 0, 0, 1, 0, 0, 0, 0, 1, 0};
					LedStatus(LedArray);
				}
				break;
		case 3: {
					int LedArray[7] = { 0, 0, 0, 0, 0, 0, 1, 1, 0};
					LedStatus(LedArray);
				}
				break;
		case 4: {
					int LedArray[7] = { 0, 0, 0, 1, 1, 0, 0, 0, 0};
					LedStatus(LedArray);
				}
				break;
		case 5: {
					int LedArray[7] = { 0, 1, 0, 0, 1, 0, 0, 0, 0};
					LedStatus(LedArray);
				}
				break;
		case 6: {
					int LedArray[7] = { 0, 1, 0, 0, 0, 0, 0, 0, 0};
					LedStatus(LedArray);
				}
				break;
		case 7: {
					int LedArray[7] = { 0, 0, 0, 1, 1, 1, 1, 1, 1};
					LedStatus(LedArray);
				}
				break;
		case 8: {
					int LedArray[7] = { 0, 0, 0, 0, 0, 0, 0, 0, 0};
					LedStatus(LedArray);
				}
				break;
		case 9: {
					int LedArray[7] = { 0, 0, 0, 0, 0, 0, 1, 0, 0};
					LedStatus(LedArray);
				}
				break;
		default: {
					int LedArray[7] = { 0, 0, 0, 0, 0, 0, 0, 0, 1};
					LedStatus(LedArray);
				}
				break;
	}
}

void LEDStatus(int LedInt[7]){
		  HAL_GPIO_WritePin ( A_Port, A_Pin , LedInt[0]);
		  HAL_GPIO_WritePin ( B_Port, B_Pin , LedInt[1]);
		  HAL_GPIO_WritePin ( C_Port, C_Pin , LedInt[2]);
		  HAL_GPIO_WritePin ( D_Port, D_Pin , LedInt[3]);
		  HAL_GPIO_WritePin ( E_Port, E_Pin , LedInt[4]);
		  HAL_GPIO_WritePin ( F_Port, F_Pin , LedInt[5]);
		  HAL_GPIO_WritePin ( G_Port, G_Pin , LedInt[6]);
}
