#include "fsm_automatic.h"
int SevenSEGCounter = 9;
void fsm_automatic_run(){
	setTimer1(1000);
	display7SEG(SevenSEGCounter);
	if(timer1_flag == 1){
		setTimer1(1000);
		//TODO
		HAL_GPIO_TogglePin(LED_RED_GPIO_Port, LED_RED_Pin);
		if(SevenSEGCounter>0) SevenSEGCounter--;
		display7SEG(SevenSEGCounter);
	}

}

